{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@zampa/shared": ["shared/src/index.ts"],
      "@zampa/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@zampa/auth/feature": ["libs/auth/feature/src/index.ts"],
      "@zampa/products/data-access": ["libs/products/data-access/src/index.ts"],
      "@zampa/products/feature": ["libs/products/feature/src/index.ts"],
      "@zampa/cart/data-access": ["libs/cart/data-access/src/index.ts"],
      "@zampa/cart/feature": ["libs/cart/feature/src/index.ts"],
      "@zampa/orders/data-access": ["libs/orders/data-access/src/index.ts"],
      "@zampa/orders/feature": ["libs/orders/feature/src/index.ts"],
      "@zampa/checkout/feature": ["libs/checkout/feature/src/index.ts"],
      "@zampa/checkout/data-access": ["libs/checkout/data-access/src/index.ts"],
      "@zampa/payment/data-access": ["libs/payment/data-access/src/index.ts"],
      "@zampa/home/feature": ["libs/home/feature/src/index.ts"],
      "@zampa/ui": ["libs/ui/src/index.ts"]
    }
  }
}
